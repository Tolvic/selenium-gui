<li class="list-group-item step-li">
    <div class="row step">
        <div class="col-auto">
            <select class="form-control step-type">
                <option selected>Go To URL</option>
                <option>Find Element</option>
                <option>Element Operations</option>
            </select>
        </div>
        <div class="col">
            <div id="go-to-url-inputs" class="row step-inputs">
                <input type="url" class="form-control step-input" name="url" placeholder="URL">
            </div>

            <div id="find-element-inputs" class="row step-inputs" style="display: none;">
                <select class="form-control col-3 mr-sm-2">
                    <option>By Class Name</option>
