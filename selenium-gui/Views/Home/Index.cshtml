@{
    ViewData["Title"] = "Selenium GUI";
}
@section Scripts{
    <script src="~/js/Sequence.js"></script>
}

<div class="text-center">
    <h1 class="display-4">Create Sequence</h1>
    <p>A tool to automate repetive navigation, generating bug reproduction scripts and to assist writing selenium functional test.</p>

</div>

<div class="card text-center">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <button type="button" id="import-sequence" class="btn btn-outline-primary" data-toggle="modal" data-target="#import-modal">Import</button>
            </div>
            <div class="col">
                <h2>Sequence</h2>
            </div>
            <div class="col">
                <button type="button" id="export-sequence" class="btn btn-outline-primary" data-toggle="modal" data-target="#export-modal">Export</button>
            </div>
        </div>
    </div>
    <form>
        <ul id="sequence-list" class="list-group list-group-flush">
            <partial name="_step"/>
        </ul>



        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <button type="button" id="run-sequence" class="btn btn-success">Run Sequence</button>
                </div>
                <div class="col">
                    <button type="button" id="add-step" class="btn btn-primary">Add Step</button>
                </div>
                <div class="col">
                    <button class="btn btn-info">Get Script</button>
                </div>
            </div>
        </div>
    </form>
</div>


<div id="import-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Import Sequence</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Paste a sequence in JSON format below:</p>
                <textarea class="form-control" id="message-text" rows="15"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Import</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="export-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Export Sequence</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Use the below JSON to share you sequence or save it for later:</p>
                <textarea class="form-control" id="export-text" rows="15"></textarea>
            </div>
            <div class="modal-footer">
                <button id="export-copy-to-clipboard" type="button" class="btn btn-primary">Copy To Clipboard</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>